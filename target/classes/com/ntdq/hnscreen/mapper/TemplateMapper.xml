<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ntdq.hnscreen.mapper.TemplateMapper">
    <!--    <resultMap id="config" type="com.ntdq.hnscreen.mapper.TemplateMapper">-->
    <!--        <result property="fieldName" column="mp_code"/>-->
    <!--        <result property="address" column="mp_address"/>-->
    <!--    </resultMap>-->
    <select id="getTemplateIdByName" resultType="java.lang.Long">
        select id
        from t_template_type
        where type_name = #{systemName}
    </select>

    <select id="getTemplateIdsByTypeId" resultType="java.lang.Long">
        select tmpl_id
        from t_template_ref_type
        where type_id = #{typeId}
    </select>

    <select id="getDeviceCodesByTemplateId" resultType="java.lang.String">
     select device_code from t_device where tmpl_id = #{tmplId}
    </select>

</mapper>